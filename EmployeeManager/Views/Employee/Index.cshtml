@model IEnumerable<EmployeeManager.Core.Models.Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-3">
    <a class="btn custom-btn ml-auto create-btn" asp-action="CreateEmployee">Dodaj pracownika</a>
</div>
<p>
    Zarządzaj swoimi pracownikami.
</p>
<table class="table rounded">
    <thead>
        <tr class="bg-light">
            <th>
                Osoba
            </th>
            <th>
                Adres
            </th>
            <th>
                Numer Telefonu
            </th>
            <th>
                Krótki opis
            </th>
            <th>
                Edytuj / Usuń
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="mt-3 mb-3 bg-light rounded">
            <td>
                <b>@item.Name @item.Surname </b><br />
                @item.Position
            </td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="EditEmployee" asp-route-id="@item.Id" title="Edytuj">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="black" width="18px" height="18px"><path d="M0 0h24v24H0z" fill="none" /><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" /></svg>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" title="Usuń">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="black" width="18px" height="18px"><path d="M0 0h24v24H0z" fill="none" /><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" /></svg>
                </a>
            </td>
        </tr>
        }
            </tbody>
</table>
